<odoo>
    <record id="view_trellis_test_list" model="ir.ui.view">
        <field name="name">trellis.test.list</field>
        <field name="model">trellis.test</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_trellis_test_form" model="ir.ui.view">
        <field name="name">trellis.test.form</field>
        <field name="model">trellis.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="trellis_test_action" model="ir.actions.act_window">
        <field name="name">Trellis Test</field>
        <field name="res_model">trellis.test</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="trellis_root_menu" name="Trellis Root"/>
    <menuitem id="trellis_test_menu" name="Trellis Test"
              parent="trellis_root_menu" action="trellis_test_action"/>
</odoo>
