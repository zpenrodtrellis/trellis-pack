<odoo>
    <!-- Master Schedule list -->
    <record id="view_trellis_schedule_list" model="ir.ui.view">
        <field name="name">trellis.schedule.list</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="state"/>
                <field name="mo_id"/>
            </list>
        </field>
    </record>

    <!-- Master Schedule form -->
    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_release_mo"
                            type="object"
                            string="Release MO"
                            class="btn-primary"
                            invisible="state == 'released'"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="state" readonly="1"/>
                        <field name="mo_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Stages">
                            <field name="stage_ids" context="{'default_schedule_id': active_id}" nolabel="1">
                                <tree editable="bottom" string="Stages" create="false" delete="false">
                                    <field name="name"/>
                                    <field name="stage_type"/>
                                    <field name="date_start"/>
                                    <field name="date_stop"/>
                                </tree>
                                <form string="Stage">
                                    <group>
                                        <field name="name"/>
                                        <field name="stage_type"/>
                                        <field name="date_start"/>
                                        <field name="date_stop"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage Calendar -->
    <record id="view_trellis_schedule_stage_calendar" model="ir.ui.view">
        <field name="name">trellis.schedule.stage.calendar</field>
        <field name="model">trellis.schedule.stage</field>
        <field name="arch" type="xml">
            <calendar string="Stage Calendar" date_start="date_start" date_stop="date_stop">
                <field name="name"/>
                <field name="stage_type"/>
                <field name="schedule_id"/>
            </calendar>
        </field>
    </record>

    <!-- Stage Gantt -->
    <record id="view_trellis_schedule_stage_gantt" model="ir.ui.view">
        <field name="name">trellis.schedule.stage.gantt</field>
        <field name="model">trellis.schedule.stage</field>
        <field name="arch" type="xml">
            <gantt string="Stage Gantt" date_start="date_start" date_stop="date_stop">
                <field name="name"/>
                <field name="stage_type"/>
                <field name="schedule_id"/>
            </gantt>
        </field>
    </record>

    <!-- Master Schedule action -->
    <record id="trellis_schedule_action" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stage action -->
    <record id="trellis_schedule_stage_action" model="ir.actions.act_window">
        <field name="name">Schedule Stages</field>
        <field name="res_model">trellis.schedule.stage</field>
        <field name="view_mode">calendar,gantt,list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="trellis_root_menu" name="Trellis Root"/>
    <menuitem id="trellis_schedule_menu" name="Master Schedule"
              parent="trellis_root_menu" action="trellis_schedule_action"/>
    <menuitem id="trellis_stage_menu" name="Stage Timeline"
              parent="trellis_root_menu" action="trellis_schedule_stage_action"/>
</odoo>
