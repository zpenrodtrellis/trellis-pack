<odoo>
    <!-- Tree/List View -->
    <record id="view_trellis_schedule_list" model="ir.ui.view">
        <field name="name">trellis.schedule.list</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_release_mo" string="Release MO" type="object"
                        states="planned" class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="state" readonly="1"/>
                        <field name="mo_id" readonly="1"/>
                    </group>
                    <group string="Stage Dates">
                        <field name="clone_date" readonly="1"/>
                        <field name="veg_date" readonly="1"/>
                        <field name="flower_date" readonly="1"/>
                        <field name="harvest_date" readonly="1"/>
                        <field name="dry_date" readonly="1"/>
                        <field name="buck_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_trellis_schedule_calendar" model="ir.ui.view">
        <field name="name">trellis.schedule.calendar</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Master Schedule" date_start="clone_date" date_stop="buck_date" color="product_id">
                <field name="display_name_stage"/>
            </calendar>
        </field>
    </record>

    <!-- Gantt View -->
    <record id="view_trellis_schedule_gantt" model="ir.ui.view">
        <field name="name">trellis.schedule.gantt</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <gantt string="Master Schedule" date_start="clone_date" date_stop="buck_date" default_group_by="product_id">
                <field name="display_name_stage"/>
            </gantt>
        </field>
    </record>

    <!-- Action -->
    <record id="action_trellis_schedule" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">list,form,calendar,gantt</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_trellis_root" name="Trellis Root"/>
    <menuitem id="menu_trellis_schedule" name="Master Schedule"
              parent="menu_trellis_root" action="action_trellis_schedule"/>
</odoo>
