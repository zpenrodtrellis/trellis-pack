<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Master Schedule Views -->
    <record id="view_trellis_schedule_list" model="ir.ui.view">
        <field name="name">trellis.schedule.list</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <list string="Master Schedule">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="veg_date"/>
                <field name="flower_date"/>
                <field name="harvest_date"/>
                <field name="dry_date"/>
                <field name="buck_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form string="Master Schedule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="state"/>
                        <field name="mo_id"/>
                    </group>
                    <group>
                        <field name="veg_date" readonly="1"/>
                        <field name="flower_date" readonly="1"/>
                        <field name="harvest_date" readonly="1"/>
                        <field name="dry_date" readonly="1"/>
                        <field name="buck_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Stages">
                            <field name="stage_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="stage"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_release_mo" type="object" string="Release MO" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Stage Events Calendar -->
    <record id="view_trellis_schedule_stage_calendar" model="ir.ui.view">
        <field name="name">trellis.schedule.stage.calendar</field>
        <field name="model">trellis.schedule.stage</field>
        <field name="arch" type="xml">
            <calendar string="Stage Schedule" date_start="date">
                <field name="name"/>
                <field name="stage"/>
                <field name="schedule_id"/>
            </calendar>
        </field>
    </record>

    <!-- Stage Events Gantt -->
    <record id="view_trellis_schedule_stage_gantt" model="ir.ui.view">
        <field name="name">trellis.schedule.stage.gantt</field>
        <field name="model">trellis.schedule.stage</field>
        <field name="arch" type="xml">
            <gantt string="Stage Schedule" date_start="date" date_stop="date">
                <field name="name"/>
                <field name="stage"/>
                <field name="schedule_id"/>
            </gantt>
        </field>
    </record>

    <!-- Master Menu -->
    <menuitem id="menu_trellis_root_root" name="Trellis Root"/>
    <menuitem id="menu_trellis_schedule" name="Master Schedule"
              parent="menu_trellis_root_root" action="action_trellis_schedule"/>

    <record id="action_trellis_schedule" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">list,form,calendar,gantt</field>
    </record>

    <!-- Stage Events under same Master Schedule menu -->
    <menuitem id="menu_trellis_schedule_stage" name="Stage Events"
              parent="menu_trellis_schedule" action="action_trellis_schedule_stage"/>

    <record id="action_trellis_schedule_stage" model="ir.actions.act_window">
        <field name="name">Stage Events</field>
        <field name="res_model">trellis.schedule.stage</field>
        <field name="view_mode">calendar,gantt,list</field>
    </record>
</odoo>
