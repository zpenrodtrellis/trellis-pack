<odoo>
    <record id="view_trellis_schedule_tree" model="ir.ui.view">
        <field name="name">trellis.schedule.tree</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button name="action_release_mo" type="object" string="Release MO" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="trellis_schedule_action" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
