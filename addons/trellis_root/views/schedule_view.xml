<odoo>
    <!-- List view -->
    <record id="view_trellis_schedule_list" model="ir.ui.view">
        <field name="name">trellis.schedule.list</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="veg_date"/>
                <field name="flower_date"/>
                <field name="harvest_date"/>
                <field name="dry_date"/>
                <field name="buck_date"/>
                <field name="state"/>
                <field name="mo_id"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_release_mo"
                            type="object"
                            string="Release MO"
                            class="btn-primary"
                            invisible="state == 'released'"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="veg_date" readonly="1"/>
                        <field name="flower_date" readonly="1"/>
                        <field name="harvest_date" readonly="1"/>
                        <field name="dry_date" readonly="1"/>
                        <field name="buck_date" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="mo_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view -->
    <record id="view_trellis_schedule_calendar" model="ir.ui.view">
        <field name="name">trellis.schedule.calendar</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Master Schedule" date_start="start_date" date_stop="harvest_date">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
            </calendar>
        </field>
    </record>

    <!-- Gantt view -->
    <record id="view_trellis_schedule_gantt" model="ir.ui.view">
        <field name="name">trellis.schedule.gantt</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <gantt string="Master Schedule" date_start="start_date" date_stop="harvest_date">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
            </gantt>
        </field>
    </record>

    <!-- Action + Menu -->
    <record id="trellis_schedule_action" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">list,form,calendar,gantt</field>
    </record>

    <menuitem id="trellis_root_menu" name="Trellis Root"/>
    <menuitem id="trellis_schedule_menu" name="Master Schedule"
              parent="trellis_root_menu" action="trellis_schedule_action"/>
</odoo>
