<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Master Schedule Views -->
    <record id="view_trellis_schedule_list" model="ir.ui.view">
        <field name="name">trellis.schedule.list</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <list string="Master Schedule">
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="start_date"/>
                <field name="veg_date"/>
                <field name="flower_date"/>
                <field name="harvest_date"/>
                <field name="dry_date"/>
                <field name="buck_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_trellis_schedule_form" model="ir.ui.view">
        <field name="name">trellis.schedule.form</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <form string="Master Schedule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="state"/>
                        <field name="mo_id"/>
                    </group>
                    <group>
                        <field name="veg_date" readonly="1"/>
                        <field name="flower_date" readonly="1"/>
                        <field name="harvest_date" readonly="1"/>
                        <field name="dry_date" readonly="1"/>
                        <field name="buck_date" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_release_mo" type="object" string="Release MO" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_trellis_schedule_calendar" model="ir.ui.view">
        <field name="name">trellis.schedule.calendar</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Master Schedule" date_start="start_date">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <!-- Gantt View -->
    <record id="view_trellis_schedule_gantt" model="ir.ui.view">
        <field name="name">trellis.schedule.gantt</field>
        <field name="model">trellis.schedule</field>
        <field name="arch" type="xml">
            <gantt string="Master Schedule" date_start="start_date" date_stop="start_date">
                <field name="name"/>
            </gantt>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_trellis_root_root" name="Trellis Root"/>

    <record id="action_trellis_schedule" model="ir.actions.act_window">
        <field name="name">Master Schedule</field>
        <field name="res_model">trellis.schedule</field>
        <field name="view_mode">list,form,calendar,gantt</field>
    </record>

    <menuitem id="menu_trellis_schedule" name="Master Schedule"
              parent="menu_trellis_root_root" action="action_trellis_schedule"/>
</odoo>
