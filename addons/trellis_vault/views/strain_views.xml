<odoo>
  <record id="view_trellis_vault_strain_tree" model="ir.ui.view">
    <field name="name">trellis.vault.strain.tree</field>
    <field name="model">trellis.vault.strain</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="default_mother_tag_prefix"/>
        <field name="active"/>
        <field name="mother_tag_count" string="# Mother Tags"/>
      </tree>
    </field>
  </record>

  <record id="view_trellis_vault_strain_form" model="ir.ui.view">
    <field name="name">trellis.vault.strain.form</field>
    <field name="model">trellis.vault.strain</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="default_mother_tag_prefix"/>
            <field name="active"/>
            <field name="note"/>
          </group>
          <notebook>
            <page string="Mother Tags">
              <field name="mother_tag_count" readonly="1"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_trellis_vault_strain" model="ir.actions.act_window">
    <field name="name">Strains</field>
    <field name="res_model">trellis.vault.strain</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
