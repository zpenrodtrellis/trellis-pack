<odoo>
    <record id="action_trellis_vault_controlled_document" model="ir.actions.act_window">
        <field name="name">Controlled Documents</field>
        <field name="res_model">trellis.vault.controlled.document</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_trellis_vault_controlled_document_list" model="ir.ui.view">
        <field name="name">trellis.vault.controlled.document.list</field>
        <field name="model">trellis.vault.controlled.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="revision"/>
                <field name="state"/>
                <field name="effective_date"/>
                <field name="owner_id"/>
            </list>
        </field>
    </record>

    <record id="view_trellis_vault_controlled_document_form" model="ir.ui.view">
        <field name="name">trellis.vault.controlled.document.form</field>
        <field name="model">trellis.vault.controlled.document</field>
        <field name="arch" type="xml">
            <form string="Controlled Document" class="o_form_document">
                <header>
                    <button name="action_reset_to_draft" type="object" string="Set Draft"
                            invisible="state == 'draft'"/>
                    <button name="action_activate" type="object" string="Activate"
                            invisible="state != 'draft'"/>
                    <button name="action_archive" type="object" string="Archive"
                            invisible="state == 'archived'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="revision"/>
                        <field name="previous_version_id"/>
                        <field name="effective_date"/>
                        <field name="owner_id"/>
                    </group>
                </sheet>

                <!-- âœ… Chatter with attachment uploader -->
                <div class="oe_chatter" role="feed">
                    <field name="message_ids" widget="mail_thread" options="{'open_chatter': True}"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="attachment_ids" widget="many2many_binary" readonly="0"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
