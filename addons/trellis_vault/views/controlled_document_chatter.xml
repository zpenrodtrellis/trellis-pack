<odoo>
    <record id="view_trellis_vault_controlled_document_chatter" model="ir.ui.view">
        <field name="name">trellis.vault.controlled.document.form.chatter</field>
        <field name="model">trellis.vault.controlled.document</field>
        <field name="inherit_id" ref="trellis_vault.view_trellis_vault_controlled_document_form"/>
        <field name="arch" type="xml">
            <!-- Works even if form has nested sheets -->
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter" options="{'open_chatter': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
