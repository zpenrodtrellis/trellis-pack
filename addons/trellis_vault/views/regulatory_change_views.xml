<odoo>
  <record id="view_regulatory_change_tree" model="ir.ui.view">
    <field name="name">trellis.vault.regulatory.change.tree</field>
    <field name="model">trellis.vault.regulatory.change</field>
    <field name="arch" type="xml">
      <list string="Regulatory Change History">
        <field name="date"/>
        <field name="action_type"/>
        <field name="related_ref"/>
        <field name="user_id"/>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_regulatory_change_form" model="ir.ui.view">
    <field name="name">trellis.vault.regulatory.change.form</field>
    <field name="model">trellis.vault.regulatory.change</field>
    <field name="arch" type="xml">
      <form string="Regulatory Change Record">
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="date" readonly="1"/>
            <field name="user_id" readonly="1"/>
            <field name="action_type" readonly="1"/>
            <field name="related_ref" readonly="1"/>
          </group>
          <group>
            <field name="changed_fields" readonly="1"/>
            <field name="old_values" readonly="1"/>
            <field name="new_values" readonly="1"/>
            <field name="note"/>
          </group>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="view_regulatory_change_search" model="ir.ui.view">
    <field name="name">trellis.vault.regulatory.change.search</field>
    <field name="model">trellis.vault.regulatory.change</field>
    <field name="arch" type="xml">
      <search>
        <field name="action_type"/>
        <field name="user_id"/>
        <field name="related_ref"/>
        <field name="date"/>
        <field name="name"/>
      </search>
    </field>
  </record>

  <record id="action_regulatory_change" model="ir.actions.act_window">
    <field name="name">Regulatory Change History</field>
    <field name="res_model">trellis.vault.regulatory.change</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
